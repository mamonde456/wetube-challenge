extends base

block content 
        div 
            div#videoContainer(data-id=video._id)
                video(src="/"+video.fileUrl controls)
                div#videoControls
                    span#play play
                    span#mute mute
                    input#volume( type="range" step="0.1"  min="0" max="1")
                    p#time
                        span#currentTime 00
                        span : 
                        span#maxTime 00
                    input#timeline( type="range" step="1" min="0")
                    span#fullScreen Full

            h3=video.title
            p=video.overview
            div 
                each hashtag in video.hashtags
                    span=hashtag
            small=video.createdAt
            br
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
            
        if String(loggedInUser._id) === String(video.owner._id)
            hr
            p
                a(href=`${video._id}/edit-video`) edit video &rarr; 
            p
                a(href=`${video._id}/delete`) delete video &rarr; 
        if loggedIn
            div 
                form#txtForm
                    textarea#txtBox( placeholder="write a comments..." name="comments" )
                    button#txtBtn send
        div#commentWrap
            ul#commentList
                each comment in video.comments.reverse()
                    li.commentLi(data-commentId=comment.id)
                        p=comment.name
                        p=comment.text
                            span.deleteBtn ‚ùå
                        small=comment.createdAt
                    
block scripts
    script(src="/assets/js/videoPlayer.js")
    if loggedIn
        script(src="/assets/js/videoComments.js")
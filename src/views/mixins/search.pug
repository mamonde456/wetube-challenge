mixin video(video)

    div#searchVideo
        a(href=`/videos/${video._id}`)
            div#thumbImg(style=`background-image:url(${video.thumbUrl}); background-size:cover; background-position:center;`)
            div#videoInfo
                div#videoTitleWrap
                    h3=video.title
                    div#videoMeta
                        small=video.createdAt
                        span âˆ™
                        span #{video.meta.views} #{video.meta.views === 1  ? "view" :"views"}
                div#userWrap
                    div(style=`background-image:url(${video.owner.avatarUrl}); background-size:cover; background-position:center;`)
                    p=video.owner.name
                #videoContents 
                    p#content=video.overview
                    p#hashtag  
                        each hashtag in video.hashtags
                            span=hashtag
        